<p><%= link_to "Home", root_path %> | <%= link_to "Add Subscription", subscriptions_path %>| <%= link_to "One Time Charge", new_charge_path %></p>
<h1>Plan List</h1>
<% if @plans.present? %>
<%= link_to "Add Plan", new_plan_path %><br><br>
	<table border="1">
		<thead>
			<th>Name </th>
			<th>Price in Euros</th>
			<th>Plan Code</th>
			<th>Actions</th>
		</thead>
		<tbody>
			<% @plans.each do |plan| %>
				<tr>
					<td><center><%= plan.name %></center></td>
					<td><center><%= plan.price %></center></td>
					<td><center><%= plan.plan_code %></center></td>
					<td>
						<%= link_to "Show", plan %>|
						<%= link_to "Edit", edit_plan_path(plan) %>|
						<%= link_to "Delete", plan, :method => :delete, :confirm => "Are you sure? " %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>No Plan Present. | <%= link_to "Add Plan", new_plan_path %></p>
<% end %>